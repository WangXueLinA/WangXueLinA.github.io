{
  "name": "xuelin_dumi",
  "repository": {
    "type": "git",
    "url": "https://github.com/WangXueLinA/dumi_document"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "father build",
    "build:watch": "father dev",
    "create": "node scripts/create.js",
    "deploy": "gh-pages -d dist",
    "docs:build": "dumi build",
    "doctor": "father doctor",
    "install-lib": "lerna clean -y && lerna bootstrap --use-workspaces",
    "release": "lerna publish --conventional-commits",
    "release:package": "node scripts/release.js",
    "start": "dumi dev"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.8",
    "asmcrypto.js": "^2.3.2",
    "axios": "^0.24.0",
    "crypto-js": "^4.2.0",
    "js-cookie": "^2.2.1",
    "lerna": "^4.0.0",
    "moment": "^2.30.1",
    "prism-react-renderer": "^2.3.1",
    "qs": "^6.11.2",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0",
    "react-redux": "^7.2.8",
    "react-router": "^6.2.2",
    "react-router-dom": "^6.2.2",
    "redux": "^4.0.5",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "@types/crypto-js": "^4.2.1",
    "@types/js-cookie": "^2.2.1",
    "@types/lodash": "^4.14.157",
    "@types/qs": "^6.9.11",
    "@umijs/fabric": "^2.8.1",
    "@umijs/test": "^3.0.5",
    "@vue/reactivity": "^3.3.4",
    "@vue/shared": "^3.3.4",
    "async-validator": "^3.5.2",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-react-require": "^4.0.2",
    "cross-env": "^7.0.3",
    "dumi": "^2.2.17",
    "ejs": "^3.1.6",
    "eslint": "^7.x",
    "father": "^4.1.0",
    "fs-extra": "^10.0.0",
    "gh-pages": "^6.1.1",
    "glob": "^7.2.0",
    "husky": "^8.0.1",
    "inquirer": "^8.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "publishConfig": {
    "registry": "https://www.npmjs.com/"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  }
}
